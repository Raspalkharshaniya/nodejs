<%- include('./header.ejs')%>




    <div class="container-fluid">
        <div class="row">


            <div class="col-sm-12 col-md-3 col-lg-2 p-0">
                <%- include('./left.ejs')%>
            </div>

            <div class="col-sm-12 col-md-9 col-lg-10 "
                style="display: flex;justify-content: center;align-items: center;flex-direction: column;">


                <div class="container-fluid">
                    <h1 class="text-center mt-4">Package Details</h1>
                    <form  method="post" action="/adpackage" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="productname">Package Name</label>
                            <input type="text" name="packagename" class="form-control" id="packagename"
                                placeholder="Enter package name">
                        </div>
                        <div class="form-group">
                            <label for="packagedescription">Package Description</label>
                            <textarea class="form-control" type="text" name="packagedescription" id="packagedescription" rows="4"
                                placeholder="Enter package description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="packageprice">Price</label>
                            <input type="text" name="price" class="form-control" id="packageprice"
                                placeholder="Enter package price">
                        </div>
                        <div class="form-group mt-3">
                            <label for="packageimage">Package Image</label>
                            <input type="file" class="form-control-file" name="fileupload" id="packageimage">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Submit</button>
                    </form>
                </div>

            </div>



        </div>
    </div>