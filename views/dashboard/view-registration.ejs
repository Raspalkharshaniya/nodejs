<%- include('./header.ejs')%>


<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">



 <div class="container-fluid">
    <div class="row">

    
        <div class="col-sm-12 col-md-3 col-lg-2 p-0">
            <%- include('./left.ejs')%>
        </div>

        <div class="col-sm-12 col-md-9 col-lg-10 " style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
            <% if(tourismsdata.length>0){ %>
          <table class="table" id="mytable">
            <thead>
              <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email-id</th>
                <th>Mobile-no</th>
                <th>Password</th>
              </tr>
            </thead>
            <tbody>
              <%for(var i=0; i<tourismsdata.length; i++){%>
              <tr>
                <td><%= tourismsdata[i].firstname %></td>
                <td><%= tourismsdata[i].lastname %></td>
                <td><%= tourismsdata[i].email %></td>
                <td><%= tourismsdata[i].mobile %></td>
                <td><%= tourismsdata[i].password %></td>


                <td><a href="/edit-registration/<%= tourismsdata[i]._id %>" class="btn btn-primary">Edit</a>&nbsp;&nbsp;
                  <a href="/delete/<%= tourismsdata[i]._id %>" class="btn btn-danger">Delete</a></td>
                
              </tr>
              <% } %>
            </tbody>
            </table>
            <% } else { %>
              no record found 

              <%} %>
        </div>
    

        

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>


<script>
  $(document).ready(function(){
    $('#mytable').DataTable();
  });
</script>
