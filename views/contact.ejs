  <style>
    body {
      background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.3)), url(assets/image/wallpaper2.jpg);
      background-repeat: no-repeat;
      background-size: 100% 950px;
    }


    .contact-form {
      max-width: 500px;
      margin: 0 auto;
      margin-top: 150px;
      padding: 20px;
      border: 1px solid black;
      border-radius: 10px;
      box-shadow: 0 0 50px rgba(0, 0, 0, 0.8);
      background-color: rgba(0, 0, 0, 0.7);
    }

    .contact-form h2 {
      text-align: center;
      margin-bottom: 20px;
      color: aliceblue;
    }

    .form-group {
      margin-bottom: 10px;
      color: aliceblue;
    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: 10px;
      color: aliceblue;
      border: 1px solid #ccc;
      border-radius: 5px;
      transition: border-color 0.3s;
      background-color: rgba(0, 0, 0, 0.7);
    }

    .form-group input:focus,
    .form-group textarea:focus {
      border-color: #4CAF50;
    }

    .submit-button {
      width: 50%;
      margin-left: 25%;
      margin-top: 30px;
      padding: 10px;
      border: 1px solid aliceblue;
      border-radius: 5px;
      background-color:  rgba(0, 0, 0, 0.7);
      color: white;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .submit-button:hover {
      background-color: orange;
    }
  </style>

  <body>

    <div class="contact-form"data-aos="fade-up"
    data-aos-duration="3000">
      <h2>CONTACT-US</h2>
      <form  method="post"   action="/contact"  id="contactForm">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" placeholder="Your Name" required>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" placeholder="Your Email" required>
        </div>

        <div class="form-group">
          <label for="message">Message</label>
          <textarea id="message" name="message" rows="5" cols="5"  placeholder="Your Message" required></textarea>
        </div>

        <button type="submit" class="submit-button">SEND</button>
      </form>
    </div>

  </body>
















